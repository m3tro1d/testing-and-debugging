{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "product",
  "title": "Product",
  "description": "Shop product",
  "type": "object",

  "properties": {
    "alias": {
      "type": "string"
    },
    "cat": {
      "type": "string"
    },
    "category_id": {
      "type": "string",
      "pattern": "^\\d+$"
    },
    "content": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "hit": {
      "type": "string",
      "pattern": "^[01]$"
    },
    "id": {
      "type": "string",
      "pattern": "^\\d+$"
    },
    "img": {
      "type": "string",
      "pattern": ".*\\.(jpe?g|png|webp)"
    },
    "keywords": {
      "type": "string"
    },
    "old_price": {
      "type": "string",
      "pattern": "^\\d+$"
    },
    "price": {
      "type": "string",
      "pattern": "^\\d+$"
    },
    "status": {
      "type": "string",
      "pattern": "^[01]$"
    },
    "title": {
      "type": "string"
    }
  },

  "required": [
    "alias",
    "cat",
    "category_id",
    "content",
    "description",
    "hit",
    "id",
    "img",
    "keywords",
    "old_price",
    "price",
    "status",
    "title"
  ]
}
